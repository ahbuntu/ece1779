
= provide(:title, "Log In")

= form_tag(manager_login_path) do
  %h3.form-signin-heading Manager Log In
  
  .input-group
    = label_tag "login", nil, class: "sr-only"
    = text_field_tag "login", nil, class: "form-control", placeholder: "Login", autofocus: true
    = label_tag "password", nil, class: "sr-only"
    = text_field_tag "password", nil, class: "form-control", placeholder: "Password"
  .form-group
  .form-group
    = submit_tag "Log In", class: "btn btn-primary"
